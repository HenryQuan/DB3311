with recursive Tree(Actor, Degree) as (
    select A.actor_id, 1 as Degree from Acting as A,
    (select movie_id from acting where actor_id = 100) as O
    where A.movie_id = O.movie_id
union all
    select A.actor_id, O.Degree from Acting as A, 
    (select T.movie_id, R.Degree + 1 as Degree from acting T, Tree as R where T.actor_id = R.Actor) as O 
    where A.movie_id = O.movie_id
)
select * from Tree;


select * from StepTwo;
